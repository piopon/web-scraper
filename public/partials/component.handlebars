<div class="component-content">
  <div class="component-name">
    {{name}}
  </div>
  <div class="component-root-data fill">
    <div class="cards">
      <div class="card" active>
        <div class="card__infos">
          <h3 class="card__name">title</h3>
          <p class="card__author">specify selector title</a>
        </div>
      </div>
      <div class="card">
        <div class="card__infos">
          <h3 class="card__name">image</h3>
          <p class="card__author">specify selector image</p>
        </div>
      </div>
      <div class="card">
        <div class="card__infos">
          <h3 class="card__name">price</h3>
          <p class="card__author">specify selector price</p>
        </div>
      </div>
    </div>
    {{> widget type="text" parent=(append "component-" name) label="selector" value=component.selector class="fill" }}
    {{> widget type="text" parent=(append "component-" name) label="attribute" value=component.attribute }}
    {{#if (eq name "price")}}
      {{> widget type="combo" parent=(append "component-" name) label="auxiliary" options="PLN|GBP|USD|EUR" value=component.auxiliary }}
    {{else if (eq name "image")}}
      {{#if (equalsLength component.auxiliary 0)}}
        {{> widget type="button" parent=(append "component-" name) label="auxiliary" value="Select image" }}
      {{else}}
        {{> widget type="button" parent=(append "component-" name) label="auxiliary" value=component.auxiliary }}
      {{/if}}
    {{else}}
      {{> widget type="text" parent=(append "component-" name) label="auxiliary" value=component.auxiliary }}
    {{/if}}
  </div>
</div>