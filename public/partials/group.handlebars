<article class="strips__strip">
  <div class="strip__content">
    <h2 class="strip__title" data-name="Lorem">{{group.name}}</h2>
    <div class="strip__inner-text">
      <div class="group-data">
        {{> widget type="text" parent="group" label="name" value=group.name }}
        {{> widget type="button" parent="group" label="category" value=group.category }}
        {{> widget type="text" parent="group" label="domain" value=group.domain }}
      </div>
      {{#each observers}}
        {{> observer observer=this }}
      {{/each}}
    </div>
  </div>
</article>