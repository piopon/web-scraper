<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/css/animations.css" />
    <link rel="stylesheet" href="/css/colors.css" />
    <link rel="stylesheet" href="/css/page.css" />
    <link rel="stylesheet" href="/css/tooltip.css" />
    <link rel="stylesheet" href="/css/columns.css" />
    <link rel="stylesheet" href="/css/groups.css" />
    <link rel="stylesheet" href="/css/observers.css" />
    <link rel="stylesheet" href="/css/components.css" />
    <link rel="stylesheet" href="/css/status.css" />
    <link rel="stylesheet" href="/css/user.css" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="icon" type="image/x-icon" href="/img/icon/favicon-32.ico" />
    <link href="https://fonts.googleapis.com/css2?family=Sedgwick+Ave&display=swap" rel="stylesheet" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <script type="module" src="/js/script.js" defer></script>
    <title>web-scraper</title>
  </head>
  <body>
    {{!-- page body --}}
    <div id="page">
      {{!-- page header --}}
      <header id="main-header">
        <a href="/">
          <span class='logo'></span>
          <h1>web-scraper</h1>
        </a>
      </header>
      {{!-- page content --}}
      <div id="main-content">
        <header id="content-header">
          {{#if (eq type "status")}}
          <h3><a href="." title="homepage"><i class="fa fa-chevron-left"></i></a> {{title}}</h3>
          {{else}}
          <h3>{{title}}</h3>
          {{/if}}
          {{#if user}}
          <div class="user-management">
            <h5>user: {{user}}</h5>
            <form id="user-logout" class="user-loader" action="/auth/logout" method="POST">
              <button type="submit" id="user-logout"><i class="fa fa-sign-out"></i>logout</button>
            </form>
          </div>
          {{/if}}
        </header>
        {{{body}}}
      </div>
      {{!-- page footer --}}
      <footer id="main-footer">
        <h3>developed with ðŸ’š pnk @ {{year}}</h3>
        <div id="footer-links">
          {{#if (eq type "status")}}
          <div id="status-preview" class="expanded">
          {{else}}
          <div id="status-preview" class="collapsed">
          {{/if}}
            <i class="fa fa-wifi status-running" title="" id="status-web-server"></i>
            <i class="fa fa-database status-initializing" title="" id="status-web-database"></i>
            <i class="fa fa-filter status-initializing" title="" id="status-web-scraper"></i>
            {{#if user}}
            <a href="/status" title="show detailed status" target="_self">
              <i class="fa fa-dashboard" id="show-dashboard"></i>
            </a>
            {{/if}}
          </div>
          <a href="https://github.com/piopon" title="show author" target="_blank">
            <i class="fa fa-github" id="show-github"></i>
          </a>
        </div>
      </footer>
    </div>
  </body>
</html>